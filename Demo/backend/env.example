# Coom√únity Backend Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (Frontend URLs)
FRONTEND_URL=http://localhost:8080
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Data Paths (relative to backend directory)
DATA_PATH=../data/backups/my_recovered_website
SHARED_DATA_PATH=../data/backups/my_recovered_website/shared/data

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
HELMET_DISABLED=false
CSP_DISABLED=true

# Development Features
ENABLE_CORS=true
ENABLE_LOGGING=true
ENABLE_COMPRESSION=true 