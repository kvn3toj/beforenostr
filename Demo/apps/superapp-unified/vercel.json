{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "installCommand": "npm install --legacy-peer-deps",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "http://localhost:3002",
    "VITE_ENABLE_MOCK_AUTH": "false",
    "VITE_BASE_URL": "https://superapp-peach.vercel.app",
    "VITE_GA_TRACKING_ID": "G-XXXXXXXXXX",
    "VITE_HOTJAR_ID": "XXXXXXX",
    "VITE_ENABLE_ANALYTICS": "true",
    "VITE_BETA_TRACKING": "true",
    "VITE_NETWORK_API_URL": "http://localhost:3002",
    "VITE_NETWORK_BASE_URL": "https://superapp-peach.vercel.app"
  },
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  }
}
