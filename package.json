{
  "name": "coomunity-monorepo",
  "version": "1.0.0",
  "description": "CoomÜnity Global Platform - Monorepo completo",
  "private": true,
  "packageManager": "npm@10.0.0",
  "license": "MIT",
  "author": "CoomÜnity Team",
  "main": "backend/dist/main.js",
  "workspaces": [
    "backend",
    "Demo/apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "start:prod": "prisma generate && prisma migrate deploy && node backend/dist/main.js",
    "docker:build": "./scripts/docker-build.sh",
    "docker:build:backend": "docker build -t coomunity/backend:latest -f Dockerfile --target production .",
    "docker:build:dev": "docker build -t coomunity/backend:dev -f Dockerfile --target builder .",
    "docker:verify": "./scripts/verify-docker-context.sh",
    "docker:deploy": "./scripts/docker-deploy.sh",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:status": "docker-compose -f docker-compose.prod.yml ps"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.3",
    "@prisma/client": "^6.11.1",
    "@slack/webhook": "^7.0.5",
    "@types/node-fetch": "^2.6.12",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "node-abort-controller": "^3.1.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.11.1",
    "prom-client": "^15.1.3",
    "redis": "^5.5.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.15.33",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.5.4"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "prisma": {
    "seed": "ts-node backend/src/prisma/seed.ts",
    "schema": "backend/prisma/schema.prisma"
  }
}
