# ================================================================
# CoomÜnity Production Environment Variables Template
# Copiar este archivo como .env.prod y configurar los valores
# ================================================================

# ================================================================
# Base de Datos PostgreSQL
# ================================================================
DB_NAME=coomunity_prod
DB_USER=coomunity_user
DB_PASSWORD=MySecurePassword2024!

# ================================================================
# JWT y Autenticación
# ================================================================
JWT_SECRET=MyVerySecureJWTSecret2024ForCoomUnityProduction256Bits!
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ================================================================
# Redis Cache
# ================================================================
REDIS_PASSWORD=MySecureRedisPassword2024!

# ================================================================
# URLs y CORS
# ================================================================
VITE_API_BASE_URL=http://localhost:3002
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ================================================================
# Monitoring (Opcional)
# ================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ================================================================
# SSL/TLS (Para Nginx con HTTPS)
# ================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================================================
# Email (Si se usa)
# ================================================================
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# ================================================================
# External APIs (Si se usan)
# ================================================================
OPENAI_API_KEY=your_openai_api_key_if_used
GOOGLE_CLIENT_ID=your_google_client_id_if_used
GOOGLE_CLIENT_SECRET=your_google_client_secret_if_used

# ================================================================
# Configuraciones de Aplicación
# ================================================================
APP_ENV=production
DEBUG=false
LOG_LEVEL=info 