root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = off

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.{sh,bash}]
indent_size = 4 